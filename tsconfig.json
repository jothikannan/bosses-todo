{
    "compilerOptions": {
        "strict": false,
        "target": "ES6",
        "module": "CommonJS",
        "outDir": "build",
        "typeRoots": [
            "node_modules/@types"
        ],
        "types": [
            "node",
            "reflect-metadata"
        ],
        "noImplicitAny": false,
        "strictNullChecks": false,
        "resolveJsonModule": true,
        "removeComments": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "lib": [
            "ES6"
        ]
    }
}